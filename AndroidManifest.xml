<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.chijia.game2048"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="8"
        android:targetSdkVersion="19" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/icon"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name="com.chijia.game2048.SplashActivity"
            android:screenOrientation="portrait"
            android:theme="@android:style/Theme.NoTitleBar" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.chijia.game2048.MainActivity"
            android:screenOrientation="portrait"
            android:theme="@android:style/Theme.NoTitleBar" >
        </activity>
        <activity
            android:name="com.chijia.game2048.GameOverActivity"
            android:theme="@android:style/Theme.NoTitleBar" >
        </activity>
        <activity 
            android:name="com.chijia.game2048.GameSuccessActivity"
            android:theme="@android:style/Theme.NoTitleBar"
            >  
        </activity>
    </application>

</manifest>